<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="mainPanel" prefHeight="574.0" prefWidth="939.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="transferProduct.TransferController">
    <left>
        <GridPane hgap="10.0" vgap="10.0">
            <Label text="Enter Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtSearch" onAction="#handleSearchProductCodeAction" prefHeight="27.0" prefWidth="502.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearchProductCodeAction"  text="Search" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        </GridPane>
        <TableView fx:id="tblSearchProduct" layoutX="23.0" layoutY="92.0" prefHeight="398.0" prefWidth="919.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="locationID" prefWidth="76.0" text="LocationID">
                    <cellValueFactory>
                        <PropertyValueFactory property="locationID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="productItemCode" prefWidth="124.0" text="Product Item Code">
                    <cellValueFactory>
                        <PropertyValueFactory property="productItemCode" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="productQuantity" prefWidth="62.0" text="Quantity">
                    <cellValueFactory>
                        <PropertyValueFactory property="productQuantity" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </left>

    <right>
        <TableView fx:id="tblSearchProductCart" layoutX="23.0" layoutY="92.0" prefHeight="398.0" prefWidth="919.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="locationIDCart" prefWidth="76.0" text="LocationID">
                    <cellValueFactory>
                        <PropertyValueFactory property="locationID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="productItemCodeCart" prefWidth="124.0" text="Product Item Code">
                    <cellValueFactory>
                        <PropertyValueFactory property="productItemCode" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="productQuantityCart" prefWidth="62.0" text="Quantity">
                    <cellValueFactory>
                        <PropertyValueFactory property="productQuantity" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </right>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>
