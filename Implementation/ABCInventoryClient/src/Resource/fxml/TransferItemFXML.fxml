<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="574.0" prefWidth="939.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="transferProduct.TransferItemController">
            <top>
                <GridPane hgap="10.0" vgap="10.0">
                    <Label text="Enter Product Item Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtSearch" onAction="#handleSearchProductCodeAction" prefHeight="27.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearchProductCodeAction" text="Search" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
                </GridPane>
            </top>
            <center>
                <GridPane hgap="10" vgap="10">
                    <TableView fx:id="tblCurrentStoredProduct" layoutX="23.0" layoutY="92.0" prefHeight="398.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="locationID" prefWidth="76.0" text="LocationID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="locationID" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="productItemCode" prefWidth="124.0" text="Product Item Code">
                                <cellValueFactory>
                                    <PropertyValueFactory property="productItemCode" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="productQuantity" prefWidth="62.0" text="Quantity">
                                <cellValueFactory>
                                    <PropertyValueFactory property="productQuantity" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>

                    <GridPane alignment="CENTER" hgap="10" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#handleAddToCartAction" prefHeight="27.0" prefWidth="132.0" text="Add To Cart" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button fx:id="btnRemoveCart" mnemonicParsing="false" onAction="#handleRemoveFromCartAction" prefHeight="27.0" prefWidth="133.0" text="Remove From Cart" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
                    </GridPane>
                    <TableView fx:id="tblCart" layoutX="23.0" layoutY="92.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="locationIDCart" prefWidth="76.0" text="LocationID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="locationID" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="productItemCodeCart" prefWidth="124.0" text="Product Item Code">
                                <cellValueFactory>
                                    <PropertyValueFactory property="productItemCode" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="productQuantityCart" prefWidth="62.0" text="Quantity" onEditCommit="#onEditChange">
                                <cellValueFactory>
                                    <PropertyValueFactory property="productQuantity" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>

                </GridPane>

            </center>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </BorderPane>
