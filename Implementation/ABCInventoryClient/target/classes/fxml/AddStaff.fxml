      </GridPane>
      <Button fx:id="addStaffButton" layoutX="206.0" layoutY="355.0" mnemonicParsing="false" onAction="#addStaff">
          <tooltip>
              <Tooltip text="Add new staff">
                  <!--<showDelay>
                      <Duration millis="10"/>
                  </showDelay>-->
              </Tooltip>
          </tooltip>
          <graphic>
              <ImageView fitHeight="30" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="/image/SubmitIcon.png" />
                  </image>
              </ImageView>
          </graphic>
      </Button>
      <Button fx:id="resetButton" layoutX="284.0" layoutY="355.0" mnemonicParsing="false">
          <tooltip>
              <Tooltip text="Clear texts">
