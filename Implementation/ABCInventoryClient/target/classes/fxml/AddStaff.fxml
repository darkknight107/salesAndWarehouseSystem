   <children>
      <GridPane layoutX="38.0" layoutY="57.0" prefHeight="290.0" prefWidth="537.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="164.0" minWidth="10.0" prefWidth="132.0" />
