              </Tooltip>
          </tooltip>
          <graphic>
              <ImageView fitHeight="30" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="/image/ManageStaffIcon.png" />
                  </image>
              </ImageView>
          </graphic>
      </Button>

       <Button fx:id="generateReport" layoutX="389.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleGenerateReport" prefHeight="36.0" prefWidth="115.0" >
           <tooltip>
               <Tooltip text="Generate Report">
                   <showDelay>
                       <Duration millis="10"/>
                   </showDelay>
               </Tooltip>
           </tooltip>
           <graphic>
               <ImageView fitHeight="30" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="/image/GenerateReportIcon.png" />
                   </image>
               </ImageView>
           </graphic>
       </Button>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
