               <ImageView fitHeight="30" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="/image/AcceptProductIcon.png" />
                   </image>
               </ImageView>
           </graphic>
       </Button>
       <Button fx:id="manageProduct" layoutX="87.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleManageProduct" prefHeight="36.0" prefWidth="115.0" >
           <tooltip>
               <Tooltip text="Manage Product">
                   <showDelay>
                       <Duration millis="10"/>
