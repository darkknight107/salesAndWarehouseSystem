   <top>
      <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
              </menus>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MenuBar>
            <HBox prefHeight="77.0" prefWidth="750.0" styleClass="optionsBar" stylesheets="@../css/OptionsBar.css">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton">
                      <graphic>
                      <ImageView fitHeight="20" fitWidth="180" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="/image/BackButtonIcon.png" />
                          </image>
                      </ImageView>
                      </graphic>
                     <HBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="mainMenuButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="180" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/image/HomePageIcon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="logoutButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="180" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/image/LogoutIcon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin></Button>
                     </children>
                     <HBox.margin>
                        <Insets left="1200.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="328.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="60.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="105.0" text="Product Code">
                     <padding>
                        <Insets left="20.0" top="25.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="25.0" prefWidth="308.0" promptText="Enter Product Code">
                     <HBox.margin>
                        <Insets right="5.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButton">
                      <!--<tooltip>
                          <Tooltip text="Search Product">
                              <showDelay>

                                  <Duration millis="10"/>
                              </showDelay>
                          </Tooltip>
                      </tooltip>-->
                      <graphic>
                          <ImageView fitHeight="15" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="/image/SearchIcon.png" />
                              </image>
                          </ImageView>
                      </graphic>
                      <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="addNewProductButton" mnemonicParsing="false" onAction="#handleAddNewProductButton">
                     <!-- <tooltip>
                          <Tooltip text="Add New Product">
                              <showDelay>
                                  <Duration millis="10"/>
                              </showDelay>
                          </Tooltip>
                      </tooltip>-->
                      <graphic>
                          <ImageView fitHeight="15" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="/image/AddNewProductIcon.png" />
                              </image>
                          </ImageView>
                      </graphic>
                      <HBox.margin>
                        <Insets left="5.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="productView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0"  styleClass="table-column " stylesheets="/css/TableView.css">
              <columns>
                <TableColumn fx:id="actionColumn" prefWidth="200.0" resizable="false" text="Action">
          </TableColumn>
                <TableColumn fx:id="productCodeColumn" minWidth="3.0" prefWidth="250.0" resizable="false" text="Product Code">
                    <cellValueFactory>
                        <PropertyValueFactory property="productCode" />
                    </cellValueFactory>
                </TableColumn>
                  <TableColumn fx:id="productNameColumn" minWidth="0.0" prefWidth="250.0" resizable="false" text="Product Name">
                      <cellValueFactory>
                          <PropertyValueFactory property="productName" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="priceColumn" prefWidth="150.0" resizable="false" text="Price">
                      <cellValueFactory>
                          <PropertyValueFactory property="price" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="350.0" resizable="false" text="Description ">
                      <cellValueFactory>
                          <PropertyValueFactory property="description" />
                      </cellValueFactory>
                  </TableColumn>
              </columns>
               <VBox.margin>
                  <Insets bottom="50.0" right="60.0" />
               </VBox.margin>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets left="50.0" />
         </BorderPane.margin>
         <VBox.margin>
            <Insets bottom="20.0" right="60.0" />
         </VBox.margin>
      </VBox>
   </center>
