<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manageProduct.ManageProductController">
   <top>
      <VBox prefHeight="86.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox prefHeight="60.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="105.0" text="Product Code">
                     <padding>
                        <Insets left="20.0" top="25.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="25.0" prefWidth="308.0" promptText="Enter Product Code">
                     <HBox.margin>
                        <Insets right="5.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButton" text="Search">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="addNewProductButton" mnemonicParsing="false" onAction="#handleAddNewProductButton" prefHeight="25.0" prefWidth="77.0" text="Add New Product">
                     <HBox.margin>
                        <Insets left="5.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <left>
      <TableView fx:id="productView" maxWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="actionColumn" prefWidth="187.0" resizable="false" text="Action">
          </TableColumn>
          <TableColumn fx:id="productCodeColumn" prefWidth="104.0" resizable="false" text="Product Code">
              <cellValueFactory>
                  <PropertyValueFactory property="productCode" />
              </cellValueFactory>
          </TableColumn>
            <TableColumn fx:id="productNameColumn" minWidth="0.0" prefWidth="153.0" resizable="false" text="Product Name">
                <cellValueFactory>
                    <PropertyValueFactory property="productName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priceColumn" prefWidth="78.0" resizable="false" text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="178.0" resizable="false" text="Description ">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
        </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </TableView>
   </left>
</BorderPane>
