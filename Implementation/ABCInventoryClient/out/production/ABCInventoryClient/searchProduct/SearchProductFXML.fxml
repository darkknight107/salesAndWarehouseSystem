<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import com.sun.javafx.scene.control.skin.TabPaneSkin.TabControlButtons?>
<BorderPane fx:id="mainPanel" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="searchProduct.SearchProductController">
    <top>
        <GridPane hgap="10.0" vgap="10.0">
            <Label text="Product Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtSearch" onAction="#handleSearchProductCodeAction" prefHeight="27.0" prefWidth="502.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label  text="Product Item Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtSearchProductItemCode" onAction="#handleSearchProductCodeAction" prefHeight="27.0" prefWidth="502.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearchProductCodeAction" text="Search" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="tblSearchProduct" layoutX="23.0" layoutY="92.0">
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            <columns>
                <TableColumn fx:id="displayView" text="Action">
                </TableColumn>
                <TableColumn fx:id="productCode" text="Product Code">
                   <cellValueFactory>
                      <PropertyValueFactory property="productCode" />
                   </cellValueFactory>
                </TableColumn>
              <TableColumn fx:id="productItemCode" text="Product Item Code">
                  <cellValueFactory>
                      <PropertyValueFactory property="productItemCode" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn  text="Product Name">
                  <cellValueFactory>
                      <PropertyValueFactory property="productName" />
                  </cellValueFactory>
              </TableColumn>
                <TableColumn fx:id="size" prefWidth="42.0" text="Size">
                   <cellValueFactory>
                      <PropertyValueFactory property="productSize" />
                   </cellValueFactory>
                </TableColumn>
                <TableColumn  text="Quantity">
                    <cellValueFactory>
                        <PropertyValueFactory property="productQuantity" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="LocationID">
                    <cellValueFactory>
                        <PropertyValueFactory property="locationID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Location Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="locationName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Location Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="locationAddress" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
          </TableView>
    </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
